<article>
      <div class='display'>     
        <h2 class ="title">User Registration</h2>
        <form action="/register" id="RegistrationForm" method="POST">
          <div class="form-group">

          <label for="inputUsername" >  Username:</label><br>
          <input type = "text" id="inputUsername" name = "username" placeholder="Enter User Name" required><br>

          <label for="inputPassword">Password:</label><br>
          <input type = "password" id="inputPassword" name = "password" placeholder="Enter Password" required><br>

          <label for="InputName">Name:</label><br>
          <input type = "text" id="InputName" name = "fullname" placeholder="Enter Full Name" required><br>

          <label for="inputGender">Gender:</label><br>

          <label for = "inputGender1"></label>
          <input type = "radio" id="inputGender1" name = "gender" value = "male">Male

          <label for = "inputGender2"></label>
          <input type = "radio" id="inputGender2" name = "gender" value = "female">Female

          <label for = "inputGender3"></label>
          <input type = "radio" id="inputGender3" name = "gender" value = "male">Other
          <br>

          <label for="inputEmail">Email:</label><br>
          <input type = "email" id="inputEmail" name = "email" placeholder="Enter Email"><br>
          <label for="inputDOB">Date of Birth:</label><br>
          <input type = "date" id="inputDOB" name = "date"><br>
          <label for="inputPhone">Phone:</label><br>
          <input type = "number" id="inputPhone" name = "phone" placeholder="Enter Phone number"><br>
          <br>
          <button type = "submit" class = "buttonclass" value="submit">Register</button>

          </div>
        </form>
        {{!-- Error handling --}}
        {{#if hasErrors}}
          <p class="error">
            {{#each errors}}
              {{this}}

            {{/each}}
          </p>
          {{/if}}
          <p>{{error_msg}}</p>
            <a class = "linkclass" href='/login'>Already have an account?</a>
      </div>
</article>
  